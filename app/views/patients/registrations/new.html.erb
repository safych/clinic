<div style="margin-left: 1%">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "patients/shared/error_messages", resource: resource %>

    <% invalid = @patient.errors.include?(:phone) %>
    <div class="form-group w-25 p-3">
      <%= f.label :phone %>
      <%= f.telephone_field :phone, autofocus: true, autocomplete: "phone", placeholder: "+380*********", class: "form-control #{'is-invalid' if invalid}" %>
      <% if invalid %>
        <div class="invalid-feedback d-block">
          <% @patient.errors.full_messages_for(:phone).each do |error_message| %>
            <%= error_message %>.
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="form-group w-25 p-3">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="form-group w-25 p-3">
      <%= f.label :surname %><br />
      <%= f.text_field :surname, autofocus: true, autocomplete: "surname" %>
    </div>

    <div class="form-group w-25 p-3">
      <%= f.label :age %><br />
      <%= f.number_field :age, autofocus: true, autocomplete: "age" %>
    </div>

    <div class="form-group w-25 p-3">
      <%= f.label :gender %><br />
      <%= radio_button_tag(:gender, "man") %>
        <%= label_tag(:gender_man, "I'm a man") %>
      <%= radio_button_tag(:gender, "women") %>
        <%= label_tag(:gender_women, "I'm a women") %>
    </div>

    <div class="form-group w-25 p-3">
      <%= f.label :residence %><br />
      <%= f.text_field :residence, autofocus: true, autocomplete: "residence" %>
    </div>

    <div class="form-group w-25 p-3">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="form-group w-25 p-3">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <%= f.hidden_field :token_update, :value => SecureRandom.hex(6) %>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "patients/shared/links" %>
</div>